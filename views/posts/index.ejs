</head>
<body>

<!-- Begin Nav
================================================== -->
<nav class="navbar navbar-toggleable-md navbar-light bg-white fixed-top mediumnavigation">
<button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
<span class="navbar-toggler-icon"></span>
</button>
<div class="container">
	<!-- Begin Logo -->
	<a class="navbar-brand" href="index.html">
	<a href="/"><img src="/img/logo.png" alt="logo"></a>
	</a>
	<!-- End Logo -->
	<div class="collapse navbar-collapse" id="navbarsExampleDefault">
		<!-- Begin Menu -->
		
		<!-- End Menu -->
		<!-- Begin Search -->
		
		<!-- End Search -->
	</div>
</div>
</nav>
<!-- End Nav
================================================== -->

<!-- Begin Site Title
================================================== -->
<div class="container">
	<div class="mainheading">
		<h1 class="sitetitle">Notre Blog</h1>
		
	</div>
<!-- End Site Title
================================================== -->

	<!-- Begin Featured
	================================================== -->
	<section class="featured-posts">
	<div class="section-title">
		<h2><a href="posts/new" class="btn btn-success" style="margin-bottom: 7px;">Add Post</a></h2>
	</div>
	<div class="card-columns listfeaturedtag">
        <% postes.forEach(post =>{ %>
		<!-- begin post -->
		<div class="card">
			<div class="row">
				<div class="col-md-5 wrapthumbnail">
					<a href="post.html">
						<div class="thumbnail" style="background-image:url(/img/demopic/1.jpg);">
						</div>
					</a>
				</div>
				<div class="col-md-7">
					<div class="card-block">
						<h2 class="card-title"><a href="post.html"><%= post.titre %></a></h2>
						<h4 class="card-text"><%= post.resume %></h4>
						<div class="metafooter">
							<div class="wrapfooter">
								<span class="meta-footer-thumb">
								<a href="author.html"><img class="author-thumb" src="https://www.gravatar.com/avatar/e56154546cf4be74e393c62d1ae9f9d4?s=250&amp;d=mm&amp;r=x" alt="Sal"></a>
								</span>
								<span class="author-meta">
								<span class="post-name"><a href="author.html"><%= post.auteur %></a></span><br/>
								<span class="post-date"><%= post.createdAt.toLocaleDateString() %></span><span class="dot"></span>
								<a href="/<%= post.id%>">Lire plus</a>
								</span>
								
							</div>
							<form action="/posts/<%= post.id %>?_method=DELETE" method="POST" class="d-inline">
								<button type="submit" class="btn btn-danger">Delete</button>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- end post -->
        <% }) %>
		
		<!-- end post -->

	</div>
	</section>
	<!-- End Featured
	================================================== -->


	<!-- Begin Footer
	================================================== -->
	<div class="footer">
		<p class="pull-left">
			 Copyright &copy; MEDHACH
		</p>
		<p class="pull-right">
			 Styled By MedHach <a target="_blank" href="/">BLOGTP</a>
		</p>
		<div class="clearfix">
		</div>
	</div>
	<!-- End Footer
	================================================== -->

</div>
<!-- /.container -->

